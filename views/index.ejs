<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Japanese Beginner</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="css/main.css">
    <script src="js/main.js"></script>

</head>

<body>
    <!-- navbar -->
    <div class="col-sm-12">
        <nav class="navbar navbar-expand-lg navbar-light bg-white top-navbar shadow p-3 mb-5 bg-white rounded"
            data-toggle="sticky-onscroll">
            <a class="navbar-brand Home" href="#">Japanese Beginner</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#barItem"
                aria-controls="barItem" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="barItem">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item Item">
                        <a href="#" class="nav-link">Home</a>
                    </li>

                    <li class="nav-item dropdown Item">
                        <a class="nav-link dropdown-toggle" href="#" id="Learn" role="button" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">Learn</a>

                        <div class="dropdown-menu" aria-labelledby="Learn">
                            <a class="dropdown-item" href="/learnhiragana">Learn Hiragana</a>
                            <a class="dropdown-item" href="/learnkatakana">Learn Katakana</a>
                        </div>
                    </li>

                    <li class="nav-item Item">
                        <a href="/test" class="nav-link">Test</a>
                    </li>

                    <li class="nav-item Item">
                        <a href="#" class="nav-link">About</a>
                    </li>

                </ul>
                <% if (member.length == 0) { %>
                <div class="row">
                    <div class="col-sm-12">
                        <button class="btn btn-danger btn-block ButtonItem" type="button"
                            onclick="document.getElementById('LogIn').style.display='block'"><span><i
                                    class="fa fa-user-o"></i></span> Log in
                        </button>
                        <div id="LogIn" class="modalLogIn">

                            <form action="/home" method="POST">
                                <div class="animate container ContainerLogIn bg-light">
                                    <span onclick="document.getElementById('LogIn').style.display='none'" class="close"
                                        title="Close Modal">&times;</span>

                                    <div>
                                        <h1 style="text-align: center;">Log In</h1>
                                        <p style="text-align: center;">login here using your username and password
                                        </p>
                                    </div>

                                    <div class="container">
                                        <label for="username_login">Username</label>
                                        <input type="text" name="username_login" class="form-control"
                                            placeholder="Enter your email address" required>

                                        <label for="password_login">Password</label>
                                        <input type="password" name="password_login" class="form-control"
                                            placeholder="Enter your password" required>

                                        <button class="btn-block btn btn-danger"
                                            style="margin-top: 10%;margin-bottom: 2.5%;">
                                            LogIn
                                        </button>

                                        <label>
                                            <input type="checkbox" checked="checked" name="remember"> Remember me
                                        </label>

                                        <div>
                                            <span style="float: right;">Forgot <a href="#">password?</a></span>
                                        </div>
                                    </div>

                                </div>
                            </form>
                        </div>

                        <button class="btn btn-danger btn-block ButtonItem" type="button"
                            onclick="document.getElementById('Register').style.display='block'"><span><i
                                    class="fa fa-user-plus"></i></span> Register
                        </button>
                        <div id="Register" class="modalRegister">

                            <form action="/" method="POST">

                                <div class="animate container ContainerRegister bg-light">
                                    <span onclick="document.getElementById('Register').style.display='none'"
                                        class="close" title="Close Modal">&times;</span>

                                    <div>
                                        <h1 style="text-align: center;">Register</h1>
                                        <p style="text-align: center;">Please fill in this form to create an account.
                                        </p>
                                    </div>

                                    <div class="container">
                                        <label for="User">Username</label>
                                        <input type="text" name="username_signup" class="form-control"
                                            placeholder="Enter your username" required>

                                        <label for="User">Email</label>
                                        <input type="text" name="email_signup" class="form-control"
                                            placeholder="Enter your email" required>

                                        <label for="Pass">Password</label>
                                        <input type="password" name="password_signup" class="form-control"
                                            placeholder="Enter your password" required>

                                        <button class="btn-block btn btn-danger" type="submit"
                                            style="margin-top: 10%;margin-bottom: 2.5%;">
                                            Register
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <% } else{%>
                <div>
                    <a href="/user" style="color:black">
                        <h1 style="font-size: 25px;" class="user">
                            <span><i class="fa fa-user-circle"></i></span> <%= member %>
                        </h1>
                    </a>
                </div>
                <%}%>
            </div>
        </nav>
    </div>


    <!-- message -->
    <% if (message.length > 0) { %>
                <div class="alert alert-danger col-sm-12">
                    <button type="button" style="padding-top:10px" class="close" data-dismiss="alert"
                        aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div id="message"><%= message %></div>
                </div>
                <% }%>

                <!-- slideshow -->

                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner bg-light">
                        <div class="carousel-item active">
                            <img src="image/home 1.png" style="width: 70%;margin:0% 15% 0% 15%;height: 550px;"
                                alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img src="image/home 2.png" style="width: 70%;margin:0% 15% 0% 15%;height: 550px"
                                alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img src="image/home 3.png" style="width: 70%;margin:0% 15% 0% 15%;height: 550px"
                                alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>


                <!--Home wellcome -->
                <div style="text-align:center">
                    <h1
                        style="font-size:48px;font-family:Georgia,serif;font-weight:500px; margin-top: 5%; margin-bottom: 2.5%">
                        Welcome to <span style="color:red">Japanese Beginner</span></h1>
                    <span
                        style="background-color:#898989;display:inline-block;height:3px;margin-bottom:16px;width:150px"></span>
                </div>
                <!--Home  -->

                <div class="container-fluid">
                    <div class="row">
                        <div style="-ms-flex: 50%;flex: 50%;">
                            <div class="col-sm-12">
                                <div style="margin-left:5%;margin-right:5%;">
                                    <h1 class="HeaderText">A better way to grow your knowledge</h1>
                                    <span
                                        style="background-color:#898989;display:inline-block;height:3px;margin-bottom:16px;width:150px"></span>
                                    <p class="HeaderParagraph">Japanese Beginner exists to help eveyryone learn and
                                        relax
                                        more.
                                        Now you can
                                        learn everywhere, learn everytime and grow your knowledge faster.</p>
                                </div>
                            </div>
                        </div>

                        <div style="-ms-flex: 50%;flex: 50%;">
                            <div class="col-sm-12">
                                <div style="margin-left:5%;margin-right:5%;">
                                    <div class="col-sm-12" style="margin-left:5%;margin-right:5%;">
                                        <img src="image/image%201.png" class="HomeImage" style="float: right;"
                                            alt="image 1">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid bg-light">
                    <div class="row">
                        <div style="-ms-flex: 50%;flex: 50%;">
                            <div class="col-sm-12">
                                <div style="margin-left:5%;margin-right:5%;">
                                    <img src="image/image%202.png" class="HomeImage" style="float: left;" alt="image 2">
                                </div>
                            </div>
                        </div>
                        <div style="-ms-flex: 50%;flex: 50%;">
                            <div class="col-sm-12">
                                <div style="margin-left:5%;margin-right:5%;">
                                    <h1 class="HeaderText">Learn Japanese for beginer</h1>
                                    <span
                                        style="background-color:#898989;display:inline-block;height:3px;margin-bottom:16px;width:150px"></span>
                                    <p class="HeaderParagraph">Learning Hiragana and Katakana Japanese alphabet will set
                                        a
                                        solid
                                        foundation
                                        for
                                        your Japanese learning process</p>
                                    <ul class="HeaderParagraph">
                                        <li>
                                            <p><a href="/learnhiragana" style="color: black;">Learn Hiragana</a></p>
                                        </li>
                                        <li>
                                            <p><a href="/learnkatakana" style="color: black;">Learn Katakana</a></p>
                                        </li>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container-fluid">
                    <div class="row">
                        <div style="-ms-flex: 50%;flex: 50%;">
                            <div class="col-sm-12">
                                <div style="margin-left:5%;margin-right:5%;">
                                    <h1 class="HeaderText">The fastest way to remember is Test</h1>
                                    <span
                                        style="background-color:#898989;display:inline-block;height:3px;margin-bottom:16px;width:150px"></span>
                                    <p class="HeaderParagraph">Because the hiragana Japanese alphabet is relatively
                                        simple,
                                        image-based
                                        testing
                                        will be a perfect measure</p>
                                    <ul class="HeaderParagraph">
                                        <li>
                                            <p><a href="/test" style="color: black;">Test Hiragana</a></p>
                                        </li>
                                        <li>
                                            <p><a href="/test" style="color: black;">Test Katakana</a></p>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div style="-ms-flex: 50%;flex: 50%;">
                            <div class="col-sm-12">
                                <div style="margin-left:5%;margin-right:5%;">
                                    <img src="image/image%203.png" class="HomeImage" style="float: right;"
                                        alt="image 3">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bg-light" style="margin-top : 5%;">
                    <div style="text-align:center">
                        <h1
                            style="font-size:48px;font-family:Georgia,serif;font-weight:500px; margin-top: 5%; margin-bottom: 2.5%">
                            Japanese Beginner</h1>
                        <span
                            style="background-color:#898989;display:inline-block;height:3px;margin-bottom:16px;width:150px"></span>
                    </div>
                    <div class="container">
                        <div class="row">
                            <div style="-ms-flex: 25%;flex: 25%;">
                                <h1 class="HeaderText" style="text-align:center">Learn</h1>
                                <p class="HeaderParagraph"><span class="icon fa fa-book"></span>Learn Hiragana</p>
                                <p class="HeaderParagraph"><span class="icon fa fa-book"></span>Learn Katakana</p>
                            </div>
                            <div style="-ms-flex: 25%;flex: 25%;">
                                <h1 class="HeaderText" style="text-align:center">Test</h1>
                                <p class="HeaderParagraph"><span class="icon fa fa-edit"></span>Test Hiragana</p>
                                <p class="HeaderParagraph"><span class="icon fa fa-edit"></span>Test Katakana</p>
                            </div>
                            <div style="-ms-flex: 25%;flex: 25%;">
                                <h1 class="HeaderText" style="text-align:center">Contact</h1>
                                <p class="HeaderParagraph"><span class="icon fa fa-facebook"></span>Facebook</p>
                            </div>
                            <div style="-ms-flex: 25%;flex: 25%;">
                                <h1 class="HeaderText" style="text-align:center">About</h1>
                            </div>
                        </div>
                    </div>
                </div>

</body>
<script>
    var modalLogIn = document.getElementById('LogIn');
    var modalRegister = document.getElementById('Register');

    window.onclick = function (event) {
        if (event.target == modalLogIn) {
            modalLogIn.style.display = "none";
        }
        else if (event.target == modalRegister) {
            modalRegister.style.display = "none";
        }

    }
</script>

</html>